<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/relativelayout_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Hotel_image_Cardview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerCrop"
                android:src="@drawable/contact_image" />

            <TextView
                android:id="@+id/CardView_hotel_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Hotel_image_Cardview"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:singleLine="false"
                android:text="Hotel Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/radioButton_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/Hotel_image_Cardview"
                android:layout_alignTop="@+id/Hotel_image_Cardview"
                android:background="@drawable/onside_rounded_rectangle"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLength="3"
                android:maxLines="1"
                android:padding="2dp"
                android:text="3.5"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/CardView_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CardView_hotel_Name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:singleLine="false"
                android:text="Navrangpura, Ahmedabad, Gujarat" />


            <TextView
                android:id="@+id/Open_Close_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CardView_address"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Open"
                android:textColor="@android:color/holo_green_dark" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>